<main class="contenedor">
    <form action="/vacantes/editar/{{vacantes.url}}" method="POST" class="default-form">
        <h3>Informacion General</h3>

        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" placeholder="ejemplo: React Developer" value="{{vacantes.titulo}}" required>
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" placeholder="ejemplo: airBNB" value="{{vacantes.empresa}}" required>
        </div>
        <div class="campo">
            <label for="ubicacion">Ubicaci√≤n</label>
            <input type="text" name="ubicacion" placeholder="ejemplo: Lima.Lima,Peru" value="{{vacantes.ubicacion}}" required>
        </div>
        <div class="campo">
            <label for="salario">Sueldo (USD)</label>
            <input type="text" name="salario" placeholder="ejemplo: 500 Soles o Dolares" value="{{vacantes.salario}}" required>
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato">
                {{#tipoContrato vacantes.contrato}}
                <option value="" disabled selected>-- Selecciona --</option>
                <option value="freelance">Freelance</option>
                <option value="tiempo completo">Tiempo Competo</option>
                <option value="medio tiempo">Medio Tiempo</option>
                <option value="por proyceto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label for="#">Descripcion de la Vacante</label>
            <input type="hidden" id="x" name="descripcion" value="{{{vacantes.descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkill vacantes.skills}}
            {{/seleccionarSkill}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Editar Publicacion" class="btn btn-azul">
        </div>
    </form>
</main>