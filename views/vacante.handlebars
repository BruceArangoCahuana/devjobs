
<h3>{{vacantes.titulo}}</h3>

<div class="contenido-superior vacante contenedor">
    
      <div class="caja">
            <p class="etiqueta">Empresa</p>
            <p class="nombre">{{vacantes.empresa}}</p>
        </div>
      <div class="caja">
            <p class="etiqueta">Ubicacion</p>
            <p class="nombre">{{vacantes.ubicacion}}</p>
        </div>
      <div class="caja">
            <p class="etiqueta">Contrato</p>
            <p class="nombre">{{vacantes.contrato}}</p>
        </div>
      <div class="caja">
            <p class="etiqueta">Salario</p>
            <p class="nombre">{{vacantes.salario}}</p>
        </div>
</div>
<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2>Descripcion del puesto</h2>
        <div class="vacante-descripcion">
            {{{vacantes.descripcion}}}
        </div>

        <a href="/vacantes/editar/{{vacantes.url}}" class="btn btn-azul editar-btn"> Editar vacante</a>
        <a href="/panel-administrador" class="btn btn-rojo editar-btn">Ver en panel administracion</a>
    </main>
    <aside class="sidebar">
        <h2>Conocimientos deseados</h2>
        <ul class="skills">
            {{#each vacantes.skills}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>
<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contactar Reclutador</h2>
        <p>Llena tus datos y cargar tu CV, pronto estaremos en contacto..!</p>
        <form action="/vacantes/{{vacantes.url}}" method="post" class="default-form" enctype="multipart/form-data">
            <div class="campo">
                <label>Nombre:</label>
                <input type="text" name="nombre" placeholder="Tu nombre">
            </div>
            <div class="campo">
                <label>Correo:</label>
                <input type="email" name="email" placeholder="Tu  correo">
            </div>
            <div class="campo">
                <label>CV (PFD):</label>
                <input type="file" name="cv">
            </div>
            <div class="campo">
                <input type="submit" value="Postular" class="btn btn-azul">
            </div>
        </form>
    </div>
     <div class="info-reclutador">
        <h2>Informaci√≥n Reclutador</h2>
        {{#if vacantes.autor.nombre}}
            <p style="text-transform: capitalize;">{{vacantes.autor.nombre}}</p>
        {{/if}}
        {{#if vacantes.autor.imagen}}
            <img src="/uploads/perfil/{{vacantes.autor.imagen}}">
        {{/if}}
    </div>
</div>